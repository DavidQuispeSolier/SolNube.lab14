<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">    
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <title>CRUD</title>
    <style>
      .navbar-dark {
          background-color: #343a40;
      }

      .navbar-nav .nav-link {
          color: #fff;
      }

      .bg-primary {
          background-color: #007bff !important;
      }

      .text-white {
          color: #fff !important;
      }

      .btn-create {
          background-color: #28a745;
          color: #fff;
      }

      .btn-create:hover {
          background-color: #218838;
      }

      .btn-edit {
          background-color: #17a2b8;
          color: #fff;
      }

      .btn-edit:hover {
          background-color: #138496;
      }

      .btn-delete {
          background-color: #dc3545;
          color: #fff;
      }

      .btn-delete:hover {
          background-color: #c82333;
      }

      .table-sm {
          font-size: 0.8rem;
      }

      .bg-dark-green {
          background-color: #006400 !important;
          color: #fff;
      }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">        
    <nav class="navbar navbar-dark">      
      </nav>            
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Inicio</a>
              </li>                             
            </ul>            
          </div>
        </div>
      </nav>
       <div class="container mt-4">
        <a href="/create" class="btn btn-create">Agregar</a>
        <table class="table table-sm table-bordered  text-center mt-4 ">
            <thead class="bg-dark-green text-white">
          <tr >
            <th scope="col">ID</th>
            <th scope="col">NOMBRE</th>
            <th scope="col">APELLIDO</th>            
            <th scope="col">EDAD</th>
            <th scope="col">CORREO</th>
            <th scope="col">IMAGEN</th>
            <th scope="col">ACCIONES</th>               
          </tr>
        </thead>
        <tbody>
          <% results.forEach((prod)=>{ %>
            <tr>  
                <td><%= prod.id %></td>  
                <td><%= prod.nombre %></td>
                <td><%= prod.apellido %></td>
                <td><%= prod.edad %></td>
                <td><%= prod.correo %></td>
                <td><img src="<%= prod.imagen %>" alt="imagen" width="100" height="auto"></td>
                <td>
                  <a href="/edit/<%= prod.id %>" class="btn btn-outline-info"><i class='bx bxs-edit'></i></a>
                  <a href="/delete/<%= prod.id %>" class="btn btn-outline-danger"><i class='bx bxs-trash-alt'></i></a>                   
                </td>
            </tr>                                   
         <% }) %>
        </tbody>
      </table>
      </div>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>    
</body>
</html>